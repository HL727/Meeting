[*]
charset = utf-8

# Unix-style newlines with
end_of_line = lf

# Max line length
max_line_length=100

indent_size = 4
indent_style = space

trim_trailing_whitespace = true

# newline ending every file
insert_final_newline = true

# Denotes preferred quoting style for string literals
quote_type = single

[html]
quote_type = double

[{package.json,vue.config.js}]

indent_size = 2

[*.yml]
indent_size = 2
